        <effectWorking>Cook</effectWorking>


        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <soundWorking>Recipe_Machining</soundWorking>
        <workAmount>45000</workAmount>
        <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentSpacer</li>
                    </thingDefs>
                </filter>
                <count>1</count>
                </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>COTR_Monolithium</li>
                    </thingDefs>
                </filter>
                <count>20</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Plasteel</li>
                    </thingDefs>
                </filter>
                <count>5</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Gold</li>
                    </thingDefs>
                </filter>
                <count>0.4</count>
            </li>
