            <thingDefs>
                <li>ComponentSpacer</li>
                <li>COTR_Monolithium</li>
                <li>Plasteel</li>
                <li>Gold</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <COTR_ComponentUltra>1</COTR_ComponentUltra>
        </products>
        <skillRequirements>
            <Crafting>15</Crafting>
        </skillRequirements>
        <workSkill>Crafting</workSkill>
        <displayPriority>11</displayPriority>


        <researchPrerequisite>PseudoArchotechnology</researchPrerequisite>
