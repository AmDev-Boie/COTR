<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="BenchBase">
        <defName>UltraHiTechResearchBench</defName>
        <label>ultra hi-tech research bench</label>
        <description>An Ultratech Research bench with even further improved tools to speed up research, and even is capable of researching Glitterworld level tech.</description>
        <thingClass>Building_ResearchBench</thingClass>
        <size>(7,3)</size>
        <minifiedDef />
        <thingCategories Inherit="false" />
        <costList>
            <Gold>5</Gold>
            <Silver>10</Silver>
            <Plasteel>125</Plasteel>
            <ComponentIndustrial>10</ComponentIndustrial>
            <ComponentSpacer>4</ComponentSpacer>
        </costList>
        <graphicData>
            <texPath>COTR/buildings/UltraHiTechResearchBench</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(7,3)</drawSize>
        </graphicData>
        <castEdgeShadows>true</castEdgeShadows>
        <staticSunShadowHeight>0.20</staticSunShadowHeight>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>
        <statBases>
            <MaxHitPoints>800</MaxHitPoints>
            <WorkToBuild>12000</WorkToBuild>
            <Flammability>0.5</Flammability>
            <ResearchSpeedFactor>1.75</ResearchSpeedFactor>
        </statBases>
        <comps Inherit="False">
            <li Class="CompProperties_ReportWorkSpeed">
                <workSpeedStat>ResearchSpeedFactor</workSpeedStat>
                <displayReasons>false</displayReasons>
            </li>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>500</basePowerConsumption>
                <shortCircuitInRain>true</shortCircuitInRain>
            </li>
            <li Class="CompProperties_Flickable"/>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>MultiAnalyzer</li>
                </linkableFacilities>
            </li>
        </comps>
        <fillPercent>0.5</fillPercent>
        <interactionCellOffset>(0,-1,-2)</interactionCellOffset>
        <hasInteractionCell>true</hasInteractionCell>
        <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
        <designationCategory>Production</designationCategory>
        <uiOrder>2610</uiOrder>
        <surfaceType>Item</surfaceType>
        <constructionSkillPrerequisite>12</constructionSkillPrerequisite>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
            <li>PlaceWorker_PreventInteractionSpotOverlap</li>
            <li>PlaceWorker_DrawLinesToBookcasesInRoom</li>
        </placeWorkers>
        <researchPrerequisites>
            <li>GlitterTech</li>
        </researchPrerequisites>
        <building>
            <paintable>true</paintable>
        </building>
    </ThingDef>

    <ThingDef ParentName="BuildingBase">
        <defName>COTR_ParallelQuantumComputer</defName>
        <label>parallel quantum computer</label>
        <description>Vastly increases research speed for Research benches, additionally allows for processing Exabytes of data; ideal for Glittertech research projects.</description>
        <graphicData>
            <texPath>COTR/buildings/ParallelQuantumComputer</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(2,2)</drawSize>
        </graphicData>
        <uiIconScale>0.85</uiIconScale>
        <researchPrerequisites><li>GlitterNetFoundation</li></researchPrerequisites>
        <size>(2,2)</size>
        <rotatable>false</rotatable>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <castEdgeShadows>true</castEdgeShadows>
        <fillPercent>0.5</fillPercent>
        <designationCategory>Misc</designationCategory>
        <minifiedDef>MinifiedThing</minifiedDef>
        <canOverlapZones>false</canOverlapZones>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <thingCategories>
            <li>BuildingsMisc</li>
        </thingCategories>
        <statBases>
            <MaxHitPoints>450</MaxHitPoints>
            <WorkToBuild>25000</WorkToBuild>
            <Mass>60</Mass>
            <Flammability>0.5</Flammability>
        </statBases>
        <costList>
            <Gold>10</Gold>
            <Silver>10</Silver>
            <Plasteel>80</Plasteel>
            <ComponentIndustrial>3</ComponentIndustrial>
            <ComponentSpacer>5</ComponentSpacer>
        </costList>
        <building>
            <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
        </building>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <shortCircuitInRain>true</shortCircuitInRain>
                <basePowerConsumption>450</basePowerConsumption>
            </li>
            <li Class="CompProperties_Flickable"/>
            <li Class="CompProperties_Facility">
                <statOffsets>
                    <ResearchSpeedFactor>0.25</ResearchSpeedFactor>
                </statOffsets>
                <maxSimultaneous>1</maxSimultaneous>
            </li>
        </comps>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
        </placeWorkers>
        <constructionSkillPrerequisite>12</constructionSkillPrerequisite>
    </ThingDef>

</Defs>